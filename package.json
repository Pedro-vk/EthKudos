{
  "name": "EthKudos",
  "version": "0.0.1",
  "description": "Kudos system on Ethereum blockchain",
  "author": "Pedro Guti√©rrez<info@xitrus.es>",
  "homepage": "eth-kudos.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pedro-vk/EthKudos"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ng serve",
    "start:e2e": "ng serve --configuration=e2e",
    "build": "npm run clean:sol:build && ng build --prod --aot --progress false",
    "deploy:dev": "truffle deploy --network dev && npm run clean:sol:build",
    "deploy:ropsten": "truffle deploy --network ropsten && npm run clean:sol:build",
    "lint": "npm run lint:sol && npm run lint:ng",
    "lint:ng": "ng lint",
    "lint:sol": "solium -d contracts/",
    "lint:fix": "npm run lint:sol:fix",
    "lint:sol:fix": "solium -d contracts/ --fix",
    "test": "npm run test:sol && npm run test:ng",
    "test:ng": "ng test --source-map --code-coverage --progress false --watch false",
    "test:ng:watch": "ng test --source-map --code-coverage --watch",
    "test:sol": "solidity-coverage && mv coverage coverage-sol",
    "test:sol:dev": "truffle test --network dev",
    "test:sol:live": "truffle test --network ropsten",
    "pree2e": "webdriver-manager update --standalone false --gecko false --versions.chrome 2.41",
    "e2e": "ng e2e --configuration=e2e --webdriver-update false",
    "e2e:dev": "ng e2e --dev-server-target",
    "eth:up": "ganache-cli -d -b 2",
    "merge:sol:build": "sol-merger \"./contracts/*.sol\" ./build/merged",
    "clean:sol:build": "for i in build/contracts/*.json; do npx jq '{contractName, abi, bytecode, deployedBytecode, compiler, networks, schemaVersion}' \"$i\" > \"$i.tmp\" && mv \"$i.tmp\" \"$i\"; done",
    "i18n:extract": "ngx-translate-extract -i ./src -o ./src/i18n/*.json --format-indentation '  ' --sort && npm run i18n:duplicate-base",
    "i18n:duplicate-base": "jq 'to_entries | map( {(.key) :  (if .value == \"\" then .key else .value end) } ) | add' src/i18n/en.json > src/i18n/en.json.tmp && mv -f src/i18n/en.json.tmp src/i18n/en.json",
    "postinstall": "node scripts/fix-angular-cli-crypto.js",
    "create-cname": "echo $(cat package.json | grep '\"homepage\"' | cut -d '\"' -f 4) > dist/CNAME",
    "heroku": "cp -fr ./.heroku/. ./dist",
    "now:deploy": "now --static --public --name eth-kudos dist/",
    "deploy": "cp dist/index.html dist/404.html && cp -r .circleci dist/ && npm run heroku && npm run deploy:github-pages",
    "deploy:github-pages": "gh-pages -t -d dist/ -m \"Built from $(git rev-parse --short=16 HEAD): $(git log -n 1 --pretty=format:%s)\""
  },
  "dependencies": {
    "@angular/animations": "6.1.3",
    "@angular/cdk": "6.4.5",
    "@angular/common": "6.1.3",
    "@angular/compiler": "6.1.3",
    "@angular/core": "6.1.3",
    "@angular/forms": "6.1.3",
    "@angular/http": "6.1.3",
    "@angular/material": "6.4.5",
    "@angular/platform-browser": "6.1.3",
    "@angular/platform-browser-dynamic": "6.1.3",
    "@angular/router": "6.1.3",
    "@angular/service-worker": "6.1.3",
    "@ngrx/effects": "^6.1.0",
    "@ngrx/router-store": "^6.1.0",
    "@ngrx/store": "^6.1.0",
    "@ngrx/store-devtools": "^6.1.0",
    "@ngx-translate/core": "^10.0.2",
    "blockies": "0.0.2",
    "core-js": "^2.5.7",
    "detect-browser": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "lcov-result-merger": "^3.1.0",
    "messageformat": "^2.0.4",
    "metamask-logo": "^2.2.0",
    "moesif-browser-js": "^1.3.0",
    "ngx-translate-messageformat-compiler": "^4.2.0",
    "rxjs-compat": "^6.2.2",
    "sol-merger": "^0.1.2",
    "truffle-contract": "^3.0.6",
    "typescript-mix": "^3.1.3",
    "underscore": "^1.12.1",
    "web3": "1.0.0-beta.35",
    "zeppelin-solidity": "1.8.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.7.4",
    "@angular-devkit/core": "0.7.4",
    "@angular/cli": "6.1.4",
    "@angular/compiler-cli": "6.1.3",
    "@angular/language-service": "6.1.3",
    "@biesbjerg/ngx-translate-extract": "^2.3.4",
    "@types/cytoscape": "^3.2.7",
    "@types/google.analytics": "0.0.39",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^10.7.1",
    "abi-decoder": "^1.2.0",
    "codelyzer": "^4.4.4",
    "coveralls": "^3.0.2",
    "cytoscape": "^3.2.17",
    "ganache-cli": "^6.1.8",
    "gh-pages": "^1.2.0",
    "jasmine-core": "~3.2.1",
    "jasmine-marbles": "^0.3.1",
    "jasmine-reporters": "^2.3.2",
    "jasmine-spec-reporter": "~4.2.1",
    "jq-cli-wrapper": "^1.0.2",
    "karma": "^3.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.3.1",
    "protractor": "^5.4.0",
    "protractor-jasmine2-screenshot-reporter": "^0.5.0",
    "rxjs": "^6.2.2",
    "rxjs-tslint-rules": "^4.7.2",
    "solidity-coverage": "^0.5.7",
    "solium": "^1.1.8",
    "truffle": "^5.0.0-beta.1",
    "truffle-hdwallet-provider": "1.0.0-web3one.0",
    "truffle-privatekey-provider": "0.1.0",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "typescript": "^2.9.2"
  }
}
