{
  "name": "kudoschain",
  "version": "0.0.1",
  "description": "Kudos system on Ethereum blockchain",
  "author": "Pedro Guti√©rrez<info@xitrus.es>",
  "homepage": "eth-kudos.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pedro-vk/EthKudos"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ng serve",
    "build": "npm run clean:sol:build && ng build --prod --aot",
    "deploy:dev": "truffle deploy --network dev && npm run clean:sol:build",
    "deploy:ropsten": "truffle deploy --network ropsten && npm run clean:sol:build",
    "lint": "npm run lint:sol && npm run lint:ng",
    "lint:ng": "ng lint",
    "lint:sol": "solium -d contracts/",
    "lint:fix": "npm run lint:sol:fix",
    "lint:sol:fix": "solium -d contracts/ --fix",
    "test": "npm run test:sol && npm run test:ng",
    "test:ng": "ng test --code-coverage",
    "test:ng:watch": "ng test --code-coverage --watch",
    "test:sol": "solidity-coverage && mv coverage coverage-sol",
    "test:sol:dev": "truffle test --network dev",
    "test:sol:live": "truffle test --network ropsten",
    "merge:sol:build": "sol-merger \"./contracts/*.sol\" ./build/merged",
    "clean:sol:build": "for i in build/contracts/*.json; do npx jq '{contractName, abi, bytecode, deployedBytecode, compiler, networks, schemaVersion}' \"$i\" > \"$i.tmp\" && mv \"$i.tmp\" \"$i\"; done",
    "i18n:extract": "ngx-translate-extract -i ./src -o ./src/i18n/*.json --format-indentation '  ' --sort && npm run i18n:duplicate-base",
    "i18n:duplicate-base": "jq 'to_entries | map( {(.key) :  (if .value == \"\" then .key else .value end) } ) | add' src/i18n/en.json > src/i18n/en.json.tmp && mv -f src/i18n/en.json.tmp src/i18n/en.json",
    "postinstall": "node scripts/fix-angular-cli-crypto.js",
    "create-cname": "echo $(cat package.json | grep '\"homepage\"' | cut -d '\"' -f 4) > dist/CNAME",
    "heroku": "cp -fr ./.heroku/. ./dist",
    "gh-pages-travis": "cp dist/index.html dist/404.html && npm run create-cname && npm run heroku && gh-pages-travis"
  },
  "dependencies": {
    "@angular/animations": "6.0.0",
    "@angular/cdk": "6.0.0",
    "@angular/common": "6.0.0",
    "@angular/compiler": "6.0.0",
    "@angular/core": "6.0.0",
    "@angular/forms": "6.0.0",
    "@angular/http": "6.0.0",
    "@angular/material": "6.0.0",
    "@angular/platform-browser": "6.0.0",
    "@angular/platform-browser-dynamic": "6.0.0",
    "@angular/router": "6.0.0",
    "@angular/service-worker": "6.1.3",
    "@ngx-translate/core": "^10.0.1",
    "blockies": "0.0.2",
    "core-js": "^2.5.4",
    "detect-browser": "^2.2.0",
    "karma-chrome-launcher": "^2.2.0",
    "lcov-result-merger": "^2.0.0",
    "messageformat": "^2.0.2",
    "metamask-logo": "^2.1.4",
    "ngx-translate-messageformat-compiler": "^4.0.0",
    "rxjs-compat": "^6.1.0",
    "sol-merger": "^0.1.2",
    "truffle-contract": "^3.0.4",
    "web3": "1.0.0-beta.33",
    "zeppelin-solidity": "1.8.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.0",
    "@angular-devkit/core": "0.6.0",
    "@angular/cli": "6.0.0",
    "@angular/compiler-cli": "6.0.0",
    "@angular/language-service": "6.0.0",
    "@biesbjerg/ngx-translate-extract": "^2.3.4",
    "@types/cytoscape": "^3.1.7",
    "@types/google.analytics": "0.0.39",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^9.6.2",
    "abi-decoder": "^1.1.0",
    "codelyzer": "^4.0.1",
    "coveralls": "^3.0.0",
    "cytoscape": "^3.2.11",
    "gh-pages-travis": "^1.0.4",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jq-cli-wrapper": "^0.4.0",
    "karma": "^2.0.2",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^1.0.0",
    "protractor": "^5.3.1",
    "rxjs": "^6.1.0",
    "rxjs-tslint-rules": "^3.16.1",
    "solidity-coverage": "^0.4.15",
    "solium": "^1.1.6",
    "truffle": "^4.1.5",
    "truffle-hdwallet-provider": "github:trufflesuite/truffle-hdwallet-provider",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "2.7.2"
  }
}
